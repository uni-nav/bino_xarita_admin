# ========================
# DATABASE CONFIGURATION (Docker default)
# ========================
# For docker-compose: DB host is "db"
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DB_NAME=university_nav

# Full database URL for SQLAlchemy (Docker)
DATABASE_URL=postgresql://postgres:postgres@db:5432/university_nav

# Local development (uncomment if running DB on localhost)
# DB_HOST=localhost
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/university_nav

# ========================
# SECURITY SETTINGS
# ========================
# CRITICAL: Change these in production!
# Generate strong keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# Legacy admin token (will be deprecated after JWT migration)
ADMIN_TOKEN=your-secure-admin-token-min-32-chars

# Admin user (JWT login)
# Generate hash via: python scripts/create_admin.py
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=

# Secret key for general encryption
SECRET_KEY=your-secret-key-min-32-chars-change-in-production

# JWT AuthenticationSettings
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-different-from-SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================
# UPLOAD CONFIGURATION
# ========================
UPLOAD_DIR=uploads
MAX_UPLOAD_MB=15

# ========================
# CORS CONFIGURATION
# ========================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ========================
# ENVIRONMENT
# ========================
# Options: development, staging, production
ENV=development
DEBUG=false

# ========================
# FRONTEND (Docker build args)
# ========================
FRONTEND_API_URL=http://localhost:8000
FRONTEND_PORT=8080
FRONTEND_APP_NAME=Universitet Navigatsiya Tizimi
FRONTEND_ENV=production
FRONTEND_ENABLE_DEBUG=false
FRONTEND_STORAGE_KEY=change-this-to-random-string-in-production
